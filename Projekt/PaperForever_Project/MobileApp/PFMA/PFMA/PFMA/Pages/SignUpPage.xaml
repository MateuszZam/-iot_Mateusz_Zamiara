<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:renderers="clr-namespace:PFMA.Renderers;assembly=PFMA"
             mc:Ignorable="d"
             x:Class="PFMA.Pages.SignUpPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#5CDB95">

    <ContentPage.Content>
        <StackLayout>

            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="FillAndExpand"
                         Margin="0,40,0,0"
                         BackgroundColor="#379683">
                <Image Source="LogoLabelBig.png"
                       Margin="0,0,0,20"
                       HorizontalOptions="CenterAndExpand"
                       BackgroundColor="#379683"/>
            </StackLayout>

            <StackLayout Margin="30"
                         Spacing="15">
                <Label Text="Start saving your receipts"
                   Margin="0,20,0,0"
                   TextColor="#EDF5E1"
                   VerticalOptions="Start"
                   FontSize="Large"
                   HorizontalOptions="CenterAndExpand" />

                <renderers:BorderlessEntry Placeholder="Name"
                                       x:Name="RegName"
                                       FontAttributes="Bold"
                                       TextColor="#05386B"
                                       PlaceholderColor="#EDF5E1"
                                       BackgroundColor="#8EE4AF" />
                <BoxView HeightRequest="1" 
                     BackgroundColor="#EDF5E1" Margin="0,-15,0,0"/>
                <renderers:BorderlessEntry Placeholder="Email"
                                       x:Name="RegEmail"
                                       FontAttributes="Bold"
                                       TextColor="#05386B"
                                       PlaceholderColor="#EDF5E1"
                                       BackgroundColor="#8EE4AF" />
                <BoxView HeightRequest="1"
                     BackgroundColor="#EDF5E1"
                     Margin="0,-15,0,0" />
                <renderers:BorderlessEntry Placeholder="Password"
                                       x:Name="RegPassword"
                                       IsPassword="True"
                                       FontAttributes="Bold"
                                       TextColor="#05386B"
                                       PlaceholderColor="#EDF5E1"
                                       BackgroundColor="#8EE4AF" />
                <BoxView HeightRequest="1"
                     BackgroundColor="#EDF5E1"
                     Margin="0,-15,0,0" />

                <Button x:Name="BtnSignUp"
                    Clicked="BtnSignUp_OnClicked"
                    BackgroundColor="#05386B"
                    CornerRadius="5"
                    Text="SIGN UP"
                    TextColor="#EDF5E1"
                    FontAttributes="Bold"
                    FontSize="Large"/>

                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="Center"
                             Margin="0,20,0,0">
                    <Label Text="Already a receipts collector?"
                           TextColor="#EDF5E1" />
                </StackLayout>

                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="Center"
                             Margin="0,-5,0,0">
                    <Label Text="SIGN IN"
                           FontSize="Large"
                           FontAttributes="Bold"
                           TextDecorations="Underline"
                           TextColor="#05386B">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer x:Name="LblSignIn"
                                                  Tapped="LblSignIn_OnTapped"/>
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>

            </StackLayout>

            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="CenterAndExpand"
                         Margin="0,0,0,0">
                <Image Source="HelloScreenG.png"
                       Margin="-80,-30,0,0"
                       HorizontalOptions="Center"/>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>